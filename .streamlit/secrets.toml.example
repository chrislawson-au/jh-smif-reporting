# Example Streamlit secrets configuration for SMIF Dashboard
# Copy this file to .streamlit/secrets.toml and update with your values

[github]
# GitHub Personal Access Token with 'repo' scope
# Generate at: https://github.com/settings/tokens
GITHUB_TOKEN = "ghp_xxxxxxxxxxxxxxxxxxxx"

# Private repository for data storage
# Format: "username/repository-name"
DATA_REPO = "your-github-username/smif-private-data"

[emails]
# List of allowed admin emails (can upload files)
ALLOWED_EMAILS = [
    "admin1@jhu.edu",
    "admin2@jhu.edu",
    "professor@jhu.edu"
]

[passwords]
# Password for student access (view-only)
CLASS_PASSWORD = "your-secure-password-here"

[settings]
# Application settings
APP_TITLE = "SMIF Performance Dashboard"
INITIAL_PORTFOLIO_VALUE = 338400

[class_period]
# Class-specific configuration
CLASS_START_DATE = "2024-09-01"  # When your class started
CLASS_END_DATE = ""              # Leave empty for current date
CLASS_SEMESTER = "Fall 2024"     # Display name for the period
CLASS_INITIAL_VALUE = 338400     # Starting value for class period
CLASS_BENCHMARK = "VTI"          # Benchmark ticker symbol